{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "This project aims to build a template to start clean TypeScript projects from scratch with a standard folder structure, and Jest, Cucumber, ESLint and Prettier already configured for TS.",
  "keywords": [
    "BDD",
    "clean architecture",
    "hexagonal architecture",
    "ATDD",
    "cucumber",
    "testing",
    "automation",
    "TypeScript"
  ],
  "homepage": "https://github.com/Desvart/ts-template",
  "repository": "https://github.com/Desvart/ts-template.git",
  "bugs": {
    "url": "https://github.com/Desvart/ts-template/issues",
    "email": "derek.svart@gmail.com"
  },
  "license": "GPL-3.0-or-later",
  "author": "Desvart <derek.svart@gmail.com>",
  "private": true,
  "scripts": {
    "lint": "eslint ./**/*.ts",
    "fix": "eslint ./**/*.ts --fix",
    "pretest": "",
    "test": "jest --coverage ./test/unit",
    "posttest": "",
    "precompile": "jest --coverage ./test/unit",
    "compile": "tsc --build --clean && tsc"
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "5.50.0",
    "eslint": "8.33.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.4.1",
    "prettier": "2.8.3",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "env": {
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "typescript": {},
        "node": {
          "extensions": [
            ".ts"
          ]
        }
      }
    },
    "rules": {
      "no-console": "off",
      "import/extensions": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "coverageDirectory": "./test/coverage/",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
